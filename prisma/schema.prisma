generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String        
  password      String          @db.VarChar(10)
  telephone     String          @db.VarChar(8)
  roleId        Int                
  role          Role            @relation(fields: [roleId], references: [id])
}

model Role {
  id              Int           @id @default(autoincrement())
  name            String      
  users           User[]
}