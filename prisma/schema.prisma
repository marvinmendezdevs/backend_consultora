model User {    
  id                            Int                         @id @default(autoincrement())
  email                         String                      @unique
  name                          String                    
  password                      String                      @map("password_hash")
  telephone                     String                      @db.VarChar(20)
  dui                           String
  username                      String
  roleId                        Int
  jobTitle                      String                            
  businessId                    Int                            
  activated                     Boolean                     @default(true)
  createdAt                     DateTime                    @default(now())
  role                          Role                        @relation(fields: [roleId], references: [id])
  business                      Business                    @relation(fields: [businessId], references: [id])
  ClientsRegistered             Client[]
  professional                  ProfessionalInfo?
}                     

model Role {                      
  id                            Int                         @id @default(autoincrement())
  name                          String                 
  users                         User[]            
}                     

model Business {                     
  id                            Int                         @id @default(autoincrement())
  name                          String                      
  email                         String?           
  address                       String                      
  telephone                     String?                     @db.VarChar(8)
  createdAt                     DateTime                    @default(now())      
  users                         User[]        
  professionals                 ProfessionalInfo[]       
  services                      Service[]
  clients                       Client[]

}                     

model ProfessionalType           {            
  id                            Int                         @id @default(autoincrement())
  name                          String            
  description                   String?       
  professionals                 ProfessionalInfo[]        
}                 

model ProfessionalInfo {                  
  id                            Int                         @id @default(autoincrement())
  userId                        Int                         @unique
  businessId                    Int
  professionalTypeId            Int
  professionalLicense           String                      @db.VarChar(15)      
  digitalSignature              String?                     @db.VarChar(255)
  active                        Boolean                     @default(true)
  professionalType              ProfessionalType            @relation(fields: [professionalTypeId], references: [id])
  business                      Business                    @relation(fields: [businessId], references: [id])
  user                          User                       @relation(fields: [userId], references: [id])
  events                        Event[]
}

model Client {                    
  id                            Int                         @id @default(autoincrement())
  name                          String                      
  email                         String?                     
  telephone                     String?                     @db.VarChar(20)
  birthdate                     DateTime                    @db.Date
  sex                           String                     
  businessId                    Int
  registeredBy                  Int
  registeredAt                  DateTime                    @default(now())
  business                      Business                    @relation(fields: [businessId], references: [id])      
  user                          User                        @relation(fields: [registeredBy], references: [id])
  event                         Event[]
}

model Service {
  id                            Int                         @id @default(autoincrement())
  businessId                    Int
  name                          String                                            
  description                   String?
  duration                      Int
  price                         Float?
  business                      Business                   @relation(fields: [businessId], references: [id])
  event                         Event[]
}

model Event {         
  id                            Int                         @id @default(autoincrement())
  professionalId                Int
  clientId                      Int
  startAt                       DateTime
  endAt                         DateTime?
  eventStatusId                 Int
  eventTypeId                   Int
  notes                         String?
  serviceId                     Int
  service                       Service                    @relation(fields: [serviceId], references: [id])
  professional                  ProfessionalInfo            @relation(fields: [professionalId], references: [id])
  client                        Client                     @relation(fields: [clientId], references: [id])
  eventStatus                   EventStatus                 @relation(fields: [eventStatusId], references: [id])
  eventType                     EventType                   @relation(fields: [eventTypeId], references: [id])
  session                       Session[]
  payment                       Payment[]
}

model Session {
  id                          Int                         @id @default(autoincrement())
  eventId                     Int
  sessionNumber               Int
  notes                       String?
  event                       Event                      @relation(fields: [eventId], references: [id])                    
}

model EventType {
  id              Int           @id @default(autoincrement())
  name            String
  event           Event[]
}

model EventStatus {
  id              Int           @id @default(autoincrement())
  name            String
  event           Event[]
}

model PaymentMethod {
  id                            Int                         @id @default(autoincrement())
  method                        String                      @db.VarChar(15)
  payments                      Payment[]
}

model Payment {
  id                            Int                         @id @default(autoincrement())
  eventId                       Int
  amount                        Float                       
  date                          DateTime                    @default(now())
  paymentMethodId               Int
  paymentMethod                 PaymentMethod               @relation(fields: [paymentMethodId], references: [id])
  event                         Event                       @relation(fields: [eventId], references: [id])
}